<!DOCTYPE html>
<html>
    <head>
        <title>Busy News</title>
        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
        <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/angular-strap/v2.3.5/angular-strap.min.js"></script>
        <script src="/javascripts/angularApp.js"></script>
        <style> .glyphicon-thumbs-up { cursor:pointer } </style>
    </head>
    
    <body ng-app="recipeSite" ng-controller="MainCtrl">
        
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
               <h1>TypeAhead Using AngularJS</h1>
                   <input type="text" class="form-control" ng-model="selectedIngredient" bs-options="ingredient for ingredient in ingredients" placeholder="Enter state" bs-typeahead>
            </div>
            <div class="col-md-6 col-md-offset-3">
            
            </div>
        </div>
<script type="text/ng-template" id="/templateurl.html">
<div>   
 <input type="text" ng-model="model" placeholder="{{prompt}}" ng-keydown="selected=false" />
<br/>

<div class="items" ng-hide="!model.length || selected">
  <div class="ingredient" ng-repeat="item in items | filter:model  track by $index" ng-click="handleSelection(item[title])" style="cursor:pointer" ng-class="{active:isCurrent($index)}" ng-mouseenter="setCurrent($index)">
    <p class="title">{{ingredient}}</p>
  </div>
  
</div>
</div>
</script>
    </body>
    
</html>
